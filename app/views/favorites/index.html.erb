<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<div class="page-header">
    <div class="row">
        <div class="col-md-6">
        <h1>Been There List</h1>
        </div>
        <div class="col-md-6">
        <h1> Bucket List</h1>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
          <div style='width: 540px;'>
            <div id="map" style='width: 540px; height: 400px;'></div>
          </div>
            <script type="text/javascript">
             handler = Gmaps.build('Google');
             handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
               markers = handler.addMarkers(<%=raw @hash1.to_json %>);
               handler.bounds.extendWith(markers);
               handler.fitMapToBounds();
             });
           </script>
        </div>

        <div class="col-md-6">
            <div style='width: 540px;'>
              <div id="map2" style='width: 540px; height: 400px;'></div>
            </div>
                <script type="text/javascript">
                 handler2 = Gmaps.build('Google');
                 handler2.buildMap({ provider: {}, internal: {id: 'map2'}}, function(){
                   markers2 = handler2.addMarkers(<%=raw @hash2.to_json %>);
                   handler2.bounds.extendWith(markers2);
                   handler2.fitMapToBounds();
                 });
               </script>
        </div>
      </div>

    </div>

    <div class="row">
        <div class="col-md-6">
          <table class="table table-striped table-hover">
            <tr>
              <th>Brewery</th>
              <th>Address</th>
              <th>Remove</th>
            </tr>

            <% @beenthere.each do |favorite| %>
            <tr>
              <td><%= favorite.brewery.name %></td>
              <td><%= favorite.brewery.address %></td>

              <td>
                <a href="/delete_favorite/<%= favorite.id %>" class="btn btn-danger btn-xs" rel="nofollow">Remove</a>
              </td>
            </tr>
            <% end %>
          </table>
        </div>
        <div class="col-md-6">
          <table class="table table-striped table-hover">
            <tr>
              <th>Brewery</th>
              <th>Address</th>
              <th>Remove</th>
            </tr>

            <% @bucketlist.each do |favorite| %>
            <tr>
              <td><%= favorite.brewery.name %></td>
              <td><%= favorite.brewery.address %></td>

              <td>
                <a href="/delete_favorite/<%= favorite.id %>" class="btn btn-danger btn-xs" rel="nofollow">Remove</a>
              </td>
            </tr>
            <% end %>
          </table>
        </div>
    </div>
    <div class="row"></div>
</div>
